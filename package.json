{
  "name": "voting-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "npm run lint:css",
    "dev": "node check-port.mjs dev --turbopack",
    "prebuild": "npm run check:css",
    "build": "next build",
    "start": "node check-port.mjs start",
    "start:standalone": "cp -R .next/static .next/standalone/.next/ && HOST=0.0.0.0 node .next/standalone/server.js",
    "lint": "next lint",
    "lint:css": "npx stylelint \"**/*.css\"",
    "check:css": "node scripts/check-css.js",
    "pretest": "npm run lint:css",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "setup-sample-data": "ts-node --esm src/utils/setupSampleData.ts"
  },
  "dependencies": {
    "@instantdb/react": "^0.17.22",
    "@types/node-fetch": "^2.6.12",
    "critters": "^0.0.23",
    "next": "15.1.7",
    "node-fetch": "^3.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@stylistic/stylelint-plugin": "^3.1.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.23",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
